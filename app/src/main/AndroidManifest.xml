<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.ooad.flashcards">

    <application
        android:name=".ApplicationContext"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".cards.PackageListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".cards.AddCardActivity"
            android:label="@string/add_card_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cards.AddPackageActivity"
            android:label="@string/add_package_label"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".cards.ListViewActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>